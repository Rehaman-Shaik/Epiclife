<style>
    /* Project Cards Container */
    .project-cards-container {
        display: flex;
        flex-wrap: wrap; /* Allows items to wrap onto multiple lines */
        gap: 20px; /* Adjusts the spacing between the cards */
        justify-content: center; /* Centers the items horizontally */
        padding: 20px; /* Adds padding around the container */
    }

    /* Individual Project Card */
    .project-card {
        max-width: 350px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        flex: 1 1 300px; /* Flex-grow, flex-shrink, flex-basis (adjusts the card sizing) */
    }

    .project-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Project Image */
    .project-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    /* Project Content */
    .project-content {
        padding: 20px;
        text-align: left;
    }

    .project-title {
        font-size: 1.5em;
        color: #333;
        margin-bottom: 10px;
    }

    .project-description {
        font-size: 1em;
        color: #555;
        margin-bottom: 15px;
        line-height: 1.6;
    }

    /* Project Button */
    .project-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1em;
        color: #ff4b4b;
        background-color: #fff;
        text-decoration: none;
        border-radius: 5px;
        border: 2px solid #ff4b4b;
        transition: background-color 0.3s, color 0.3s;
    }

    .project-button:hover {
        background-color: #ff4b4b;
        color: #fff;
    }
</style>

<!-- Individual Project Card -->
<div class="project-card">
    <% if (project.image) { %>
        <img src="<%= project.image %>" alt="<%= project.title %>" class="project-image">
    <% } else { %>
        <img src="/assets/images/NoImg.jpg" alt="Default Image" class="project-image">
    <% } %>
    
    <div class="project-content">
        <h3 class="project-title">
            <%= project.projectTitle %>
        </h3>
        <p class="project-description">
            <%= project.description.length > 120 ? project.description.substring(0, 120) + '...' : project.description %>
        </p>
        
        <a href="/portfolio/project-details/<%= project.metaUrl %>" class="project-button">View Details</a>
    </div>
</div>
