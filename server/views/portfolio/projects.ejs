    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio - My Projects</title>
    <style>
        /* Base Styles */
        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        h2 {
            text-align: center;
            font-size: 2em;
            color: #333;
            margin-top: 20px;
        }

        section {
            padding: 20px;
        }

        /* Project Cards Container */
        .project-cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        /* Project Card */
        .project-card {
            max-width: 350px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            flex: 1 1 300px;
        }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Project Image */
        .project-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        /* Project Content */
        .project-content {
            padding: 20px;
            text-align: left;
        }

        .project-title {
            font-size: 1.5em;
            color: #333;
            margin-bottom: 10px;
        }

        .project-description {
            font-size: 1em;
            color: #555;
            margin-bottom: 15px;
            line-height: 1.6;
        }

        /* Project Button */
        .project-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            color: #ff4b4b;
            background-color: #fff;
            text-decoration: none;
            border-radius: 5px;
            border: 2px solid #ff4b4b;
            transition: background-color 0.3s, color 0.3s;
        }

        .project-button:hover {
            background-color: #ff4b4b;
            color: #fff;
        }
    </style>
</head>

<body>
    <%- include('partials/nav.ejs') %>

        <section>
            <h2>My Projects</h2>
            <div class="project-cards-container">
                <% projects.forEach(project=> { %>
                    <div class="project-card">
                        <%- include('partials/projectCard.ejs', {"project": project}) %>
                    </div>
                    <% }) %>
            </div>
        </section>

        <%- include('partials/footer.ejs') %>
</body>

</html>