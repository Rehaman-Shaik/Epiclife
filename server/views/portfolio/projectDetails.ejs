<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.projectTitle %> - Project Details</title>
</head>
<style>
    body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    color: #333;
    margin: 0;
    padding: 0;
}

.project-details-container {
    max-width: 900px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    animation: fadeInUp 0.5s ease-in-out;
}

.project-title-section {
    text-align: center;
    margin-bottom: 30px;
}

.project-title {
    font-size: 2.5em;
    color: #ff4b4b;
}

.project-subtitle {
    font-size: 1.2em;
    color: #555;
}

.project-image-section {
    text-align: center;
    margin-bottom: 30px;
}

.project-image {
    width: 100%;
    height: auto;
    border: black solid 1px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.project-description-section {
    margin-bottom: 30px;
}

.project-description {
    font-size: 1.1em;
    line-height: 1.6;
    color: #666;
}

.project-tech-stack-section {
    margin-bottom: 30px;
}

.project-tech-stack-section h3 {
    font-size: 1.5em;
    color: #333;
    margin-bottom: 10px;
}

.tech-stack-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
}

.tech-item {
    background-color: #ff4b4b;
    color: #fff;
    padding: 5px 10px;
    border-radius: 5px;
    margin-right: 10px;
    margin-bottom: 10px;
    animation: fadeIn 0.3s ease-in-out;
}

.project-links-section {
    text-align: center;
}

.project-link {
    display: inline-block;
    padding: 10px 20px;
    margin: 10px;
    color: #fff;
    background-color: #ff4b4b;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.project-link:hover {
    background-color: #e03a3a;
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

</style>
<body>
    <%- include('partials/nav.ejs') %>

    <section class="project-details-container">
        <div class="project-title-section">
            <h1 class="project-title"><%= project.projectTitle %></h1>
            <p class="project-subtitle"><%= project.subtitle %></p>
        </div>

        <div class="project-image-section">
            <img src="<%= project.image %>" alt="<%= project.title %>" class="project-image">
        </div>

        <div class="project-description-section">
            <p class="project-description"><%= project.description %></p>
        </div>

        <div class="project-tech-stack-section">
            <h3>Tech Stack</h3>
            <ul class="tech-stack-list">
                <% project.techStack.forEach(tech => { %>
                    <li class="tech-item"><%= tech %></li>
                <% }) %>
            </ul>
        </div>

        <div class="project-links-section">
            <% if (project.liveDemo) { %>
                <a href="<%= project.liveDemo %>" target="_blank" class="project-link live-demo">Live Demo</a>
            <% } %>
            <% if (project.githubLink) { %>
                <a href="<%= project.githubLink %>" target="_blank" class="project-link github">GitHub Repo</a>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer.ejs') %>

    <!-- Including the external JavaScript for animations -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const projectLinks = document.querySelectorAll('.project-link');
    
    projectLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
            link.classList.add('hovered');
        });

        link.addEventListener('mouseleave', () => {
            link.classList.remove('hovered');
        });
    });
});

    </script>

</body>
</html>
